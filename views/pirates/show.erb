<h1>Pirate</h1>
    <ul>
        <li><%= @pirate.name %></li>
        <li><%= @pirate.weight %></li>
        <li><%= @pirate.height %></li>
    </ul>
<h2>Ships</h2>
    <% @ships.each do |ship| %>
        <ul>
            <li><%= ship.name %></li>
            <li><%= ship.type %></li>
            <li><%= ship.booty %></li>
        </ul>
    <% end %>
